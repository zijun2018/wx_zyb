.news-list-item {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 204rpx;
  padding: 20rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #dcdcdc;
}

.news-list-item .part1 {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  height: 164rpx;
  font-size: 24rpx;
}

.news-list-item .part2 image {
  height: 164rpx;
  width: 218rpx;
}
